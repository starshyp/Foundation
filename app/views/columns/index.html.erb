<h1>Columns</h1>

<table>
  <thead>
    <tr>
      <th>Columntype</th>
      <th>Nboffloorsserved</th>
      <th>Status</th>
      <th>Info</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @columns.each do |column| %>
      <tr>
        <td><%= column.ColumnType %></td>
        <td><%= column.NbOfFloorsServed %></td>
        <td><%= column.Status %></td>
        <td><%= column.Info %></td>
        <td><%= column.Notes %></td>
        <td><%= link_to 'Show', column %></td>
        <td><%= link_to 'Edit', edit_column_path(column) %></td>
        <td><%= link_to 'Destroy', column, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

